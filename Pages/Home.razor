@page "/"
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-white"><i class="bi bi-activity"></i> EdzésPlatform</h1>
        <p class="text-muted">Saját edzésmenedzsment rendszer</p>
    </div>

    <div class="card bg-dark border-secondary shadow-lg" style="width: 100%; max-width: 400px;">
        <div class="card-body p-4">
            <h5 class="card-title text-white mb-3 text-center">Bejelentkezés</h5>

            <div class="mb-3">
                <label class="form-label text-muted small">Jelszó</label>
                <input type="password"
                       class="form-control bg-secondary text-white border-0 text-center"
                       @bind="password"
                       @onkeyup="HandleKeyUp"
                       placeholder="********" />
            </div>

            <button class="btn btn-primary w-100 fw-bold" @onclick="Login">
                Belépés <i class="bi bi-arrow-right-short"></i>
            </button>

            @if (showError)
            {
                <div class="alert alert-danger mt-3 py-2 small text-center border-0">
                    <i class="bi bi-exclamation-circle"></i> Hibás jelszó!
                </div>
            }
        </div>
    </div>

    <div class="mt-4 text-muted small opacity-50">
        v0.4 (Beta)
    </div>
</div>

@code {
    private string password = "";
    private bool showError = false;

    // EGYSZERŰ JELSZÓ VÉDELEM
    // Mivel ez kliens oldali kód, ez nem nyújt banki szintű biztonságot,
    // de megakadályozza, hogy bárki véletlenül belépjen.
    private const string CORRECT_PASSWORD = "Szupertitkos"; // <--- ITT ÍRD ÁT A JELSZÓT!

    private void Login()
    {
        if (password == CORRECT_PASSWORD)
        {
            showError = false;
            Nav.NavigateTo("/profiles");
        }
        else
        {
            showError = true;
            password = "";
        }
    }

    private void HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Login();
        }
    }
}